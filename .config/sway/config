#xwayland disable

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
	dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob

exec /usr/bin/gammastep
exec /usr/bin/autotiling
exec /usr/bin/polkit-dumb-agent
exec /usr/bin/steam-native -silent

set $mod Mod4
set $menu j4-dmenu-desktop --dmenu='bemenu -n -i -H 20 --tb "#2e3440" --tf "#8fbcbb" --fb "#434c5e" --ff "#a3be8c" --nb "#2e3440" --nf "#8fbcbb" --hb "#2e3440" --hf "#bf616a" --fn "Font\ Awesome\ 5\ Free 10"' --term='alacritty'

set $left h
set $down j
set $up k
set $right l

set $term alacritty

output HDMI-A-1 scale 1
output HDMI-A-1 pos 0 0 res 1920x1080

input * {
    xkb_layout "gb"
    xkb_variant "extd"
    xkb_options ""
    xkb_numlock "enabled"
}

bar {
	swaybar_command waybar
}

set $opacity 0.7
for_window [class=".*"] opacity $opacity
for_window [app_id=".*"] opacity $opacity

for_window [app_id="Chromium"] opacity 1

gaps inner 5
gaps outer 5
gaps horizontal 5
gaps vertical 5
gaps top 5
gaps right 5
gaps bottom 5
gaps left 5

font "Font Awesome 5 Free" Regular 10

output "*" bg /home/dylan/Pictures/wallpaper.jpg fill
default_border pixel 1

bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 1%+ | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 1%- | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $SWAYSOCK.wob
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle | sed -En '/\[on\]/ s/.*\[([0-9]+)%\].*/\1/ p; /\[off\]/ s/.*/0/p' | head -1 > $SWAYSOCK.wob
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym Print exec grim ~/Pictures/screenshots/$(date +'%Y-%m-%d_%H:%M:%S_grim.png')
bindsym $mod+Print exec grim -g "$(slurp)" ~/Pictures/screenshots/$(date +'%Y-%m-%d_%H:%M:%S_grim.png')

bindsym Control+Alt+t exec $term
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+r reload
bindsym $mod normal
bindsym $mod+Shift+q exec wlogout

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+x splith
bindsym $mod+z splitv

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+w layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+a focus parent

bindsym $mod+minus move scratchpad
bindsym $mod+Shift+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

